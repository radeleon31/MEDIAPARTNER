<body class="background-image">
<div class="container d-flex flex-wrap justify-content-between mt-3 margin-custom parent-positioning">
  <%# <%= button_to 'Refresh video info!', update_publishings_path, class: "btn btn-success rounded-pill", method: :get %>
  <div class="top-animation">
    <%= button_to update_publishings_path, class:"btn btn-success rounded-circle", method: :get do %>
        <i class="fas fa-redo"></i>
    <% end %>
  </div>
  <span class="text-secondary parent-positioning msg-1">Last updated: <%=@publishings.first.updated_at.strftime('%Y-%m-%d %H:%M') if @publishings.any?  %></span>

    <div class="search-wrap d-flex align-items-right">
      <%= form_tag overview_path, class:"search", method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control rounded-pill",
          placeholder: "Views | Comments | Likes | Title | Description"
        %>
      <% end %>
      <i class="fas fa-search searchIcon"></i>
      <i class="fas fa-times clear mt-3"></i>
    </div>
</div>
<div class="container background-style p-5 d-flex flex-wrap justify-content-around">
  <h2 class="msg-2">Checkout your latest posts!</h2>
  
  <%if @publishings.any?%>
    <% @publishings.each do |publishing|%>
      <%unless publishing.youtube_video_id.nil?%>
        <div class="card-trip m-3">
          <iframe class="embed-responsive-item"  src="https://www.youtube.com/embed/<%=publishing.youtube_video_id%>"
          frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen></iframe>
          <div class="card-trip-infos">
            <div>
              <h2><%=publishing.title.first(10)%></h2>
              <p><%=publishing.description.first(10)%></p>
            </div>
          </div>
          <div class="card-trip-infos d-flex">
            <div class="d-flex">
              <i class="far fa-thumbs-up mr-1"></i>
              <h2 data-metric= <%=publishing.likes.nil? ? 0 : publishing.likes  %>  >Likes</h2>
            </div>
            <div class="d-flex">
                <i  class="far fa-eye mr-1"></i></i>
              <h2 data-metric= <%=publishing.views.nil? ? 0 : publishing.views  %> >Views</h2>
            </div>
            <div class="d-flex">
                <i  class="far fa-comment mr-1"></i>
              <h2  data-metric= <%=publishing.comments.nil? ? 0 : publishing.comments  %> >Comments</h2>
            </div>
          </div>
        </div>
      <%end %>   
    <% end %>
  <%end%>
</div>
</body>
<%= console %>
