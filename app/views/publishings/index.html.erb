
<body class="background-image-index">
  <div class="pushing-aside d-flex justify-content-between">
  <div><%= link_to "New Post", new_publishing_path, class:"btn btn-dark rounded-pill "%>
    <div class="btn-group">
      <button type="button" class="btn btn-dark btn-rounded">Platform</button>
      <button type="button" class="btn btn-dark dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <div class="dropdown-menu">
        <a class="dropdown-item" href="#"><i class="fab fa-youtube-square"></i> youtube</a>
        <a class="dropdown-item" href="#"><i class="fab fa-facebook"></i> facebook</a>
        <a class="dropdown-item" href="#"><i class="fab fa-tiktok"></i> Tiktok</a>
        <a class="dropdown-item" href="#"><i class="fab fa-instagram"></i> Instagram</a>
        <a class="dropdown-item" href="#"><i class="fab fa-snapchat"></i> Snapchat</a>
      </div>
    </div>
  </div>
</div>
  <div class= "container background-purple">
  <table class="table table-dark table-hover pt-3 text-center m-2">
    <div data-simplebar data-simplebar-lg style="max-height: 250px;">
</div>
      <thead class="m-2">
        <tr>
          <th scope="col">Video</th>
          <th scope="col">Title</th>
          <th scope="col">Publication Date</th>
          <th scope="col">Total Views</th>
          <th scope="col">Video Average Watch</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody>
            <tr>
              <% @publishings.each do |publishing| %>
                <%= link_to publishing_path(publishing.id) do %>
              <td scope="row"><div class="publishing-card-video" style="background-image: url('<%= cl_video_path publishing.video.key %>')"></div></td>
              <td><%= publishing.title %> </td>
              <td>Mark</td>
              <td>Otto</td>
              <td>@mdo</td>
              <td><i class="mdi mdi-circle text-success"></i> Published</td>
            </tr>
          </tbody>
              <% end %>
            <% end %>
    </table>


<div class="d-flex flex-column container-fluid align-items-end">
<div class="card-product-main justify-content-around card-position">
  <div class="card-product-infos-main ">
    <h2> video </h2>
  </div>
  <div class="card-product-infos-main">
    <h2> title </h2>
  </div>
  <div class="card-product-infos-main">
    <h2>Publication date</h2>
  </div>
  <div class="card-product-infos-main">
    <h2>total view</h2>
  </div>
   <div class="card-product-infos-main">
    <h2>video average watch</h2>
  </div>
   <div class="card-product-infos-main">
    <h2>status</h2>
  </div>
</div>


 <div class="background-style-index">
  <div class="card-position">
 <% @publishings.each do |publishing| %>
 <%= link_to publishing_path(publishing.id), class:"text-hover" do %>
 <div class="card-product justify-content-center border border-dark ">

  <% if publishing.uid %>
    <img src="<%= publishing.thumbnail %>" alt="youtube-image" >
  <% else %>
     <%= cl_video_tag publishing.video.key, height: 100, width: 100 %>
  <% end %>

  <div class="card-product-infos">
    <h2><%= publishing.title.first(15) %></h2>
    <p><%= publishing.description.first(15) %></p>
  </div>
  <div class="card-product-infos">
    <h2>Publication date</h2>
  </div>
  <div class="card-product-infos">
    <h2>total view</h2>
  </div>
   <div class="card-product-infos">
    <h2>video average watch</h2>
  </div>
   <div class="card-product-infos">
    <h2>status</h2>
  </div>
  </div>
  <% end %>
  <% end %>
</div>
</div>

</div>
