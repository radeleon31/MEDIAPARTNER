
<div class="container-fluid background-purple vh-80">
  <div class="pushing-aside d-flex justify-content-between">
  <div><%= link_to "New Post", new_publishing_path, class:"btn btn-dark"%>
    <div class="btn-group">
      <button type="button" class="btn btn-dark btn-rounded">Platform</button>
      <button type="button" class="btn btn-dark dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">Toggle Dropdown</span>

      </button>
      <div class="dropdown-menu">
        <a class="dropdown-item" href="#">youtube</a>
        <a class="dropdown-item" href="#">facebook</a>
        <a class="dropdown-item" href="#">Tiktok</a>
        <a class="dropdown-item" href="#">Instagram</a>
      </div>
    </div>
  </div>
</div>
  <div class= "container background-purple">
  <table class="table table-dark table-hover pt-3 text-center m-2">
    <div data-simplebar data-simplebar-lg style="max-height: 250px;">
</div>
      <thead class="m-2">
        <tr>
          <th scope="col">Video</th>
          <th scope="col">Title</th>
          <th scope="col">Publication Date</th>
          <th scope="col">Total Views</th>
          <th scope="col">Video Average Watch</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody>
            <tr>
              <% @publishings.each do |publishing| %>
                <%= link_to publishing_path(publishing.id) do %>
              <td scope="row"><div class="publishing-card-video" style="background-image: url('<%= cl_video_path publishing.video.key %>')"></div></td>
              <td><%= publishing.title %> </td>
              <td>Mark</td>
              <td>Otto</td>
              <td>@mdo</td>
              <td><i class="mdi mdi-circle text-success"></i> Published</td>
            </tr>
          </tbody>
              <% end %>
            <% end %>
    </table>
</div>



<div class="navbar-wagon">
  <!-- Logo -->

  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <p class="logo-text"> <strong>Media</strong> Partner</p>
    <p class="logo-text-tagline">Gain Control of your digital foot print</p>
  <% end %>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
       <ul>
       <li class="nav-item dropdown">
         <% if user_signed_in? %>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "overview", "#", class: "dropdown-item" %>
          <%= link_to "Publisher", "#", class: "dropdown-item" %>
          <%= link_to "Monetizer", "#", class: "dropdown-item" %>
          <%= link_to "Logout", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>

       <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login | Sign up"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
    </div>
  </div>
</div>

