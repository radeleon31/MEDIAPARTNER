<div class="background-image-index">
  <div class="container pushing-aside d-flex justify-content-between pt-2">
    <div class="btn-group">
      <button type="button" class="btn btn-primary">Platform</button>
      <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <div class="dropdown-menu">
        <a class="dropdown-item" href="#"><i class="fab fa-youtube-square"></i> youtube</a>
        <a class="dropdown-item" href="#"><i class="fab fa-facebook"></i> facebook</a>
        <a class="dropdown-item" href="#"><i class="fab fa-tiktok"></i> Tiktok</a>
        <a class="dropdown-item" href="#"><i class="fab fa-instagram"></i> Instagram</a>
        <a class="dropdown-item" href="#"><i class="fab fa-snapchat"></i> Snapchat</a>
      </div>
    </div>
   <div>
    <%= link_to "New Post", new_publishing_path, class:"btn btn-primary rounded-pill "%>
   </div>
  </div>

<div class=" d-flex flex-column container-fluid align-items-end">
<div class="background-style-index style-extra">
  <div class="card-position">
 <div class="card-product title-card-index justify-content-center  ">

  <div>
    <h2>Video</h2>
  </div>
   <div class="card-product-infos">
    <h2>Title</h2>
  </div>
  <div class="card-product-infos">
    <h2>Publication date</h2>
  </div>
  <div class="card-product-infos">
    <h2>total Views</h2>
  </div>
   <div class="card-product-infos">
    <h2>Video Average Watch</h2>
  </div>
   <div class="card-product-infos">
    <h2>Status</h2>
  </div>
  </div>
</div>
</div>
 <div class="background-style-index">
  <div class="card-position">
 <% @publishings.each do |publishing| %>
 <%= link_to publishing_path(publishing.id), class:"text-hover" do %>
 <div class="card-product justify-content-center  ">
  <% if publishing.youtube_video_id %>
    <img src="<%= publishing.thumbnail %>" alt="youtube-image" >
  <% else %>
     <%= cl_video_tag publishing.video.key, height: 100, width: 100 %>
  <% end %>
  <div class="card-product-infos">
    <h2><%= publishing.title.first(15) %></h2>
    <p><%= publishing.description.first(15) %></p>
  </div>
  <div class="card-product-infos">
    <h2><%= publishing.published_at %></h2>
  </div>
  <div class="card-product-infos">
    <h2><%= publishing.views %></h2>
  </div>
   <div class="card-product-infos">
    <h2><%= publishing.avg_watch_sec %></h2>
  </div>
   <div class="card-product-infos">
    <h2><%= publishing.status %></h2>
  </div>
  </div>
  <% end %>
  <% end %>
</div>
</div>
</div>
</div>















