    <%= simple_form_for(@publishing) do |f| %>
<div class="container tab-content background-style-index">
    <div class="tab-pane show active form-login" id="home-b2">
      <h4> Video Upload </h4>
      <%= f.input :video, as: :file %>
    </div>
    <div class="tab-pane form-login" id="profile-b2">
      <h4> Details </h4>
      <%= f.input :title, label: "Video Title:" %>
      <%= f.input :description, as: :text, label: "Video Description:" %>
    </div>
    <div class="tab-pane form-login" id="settings-b2">
      <h4> Visibility </h4>
      <%= f.input :scheduled_at, as: :datetime, label: "Schedule Date and Time:" %>
      <%= f.submit %>
    </div>
     <%= link_to "Cancel", "#", class: "btn btn-danger" %>
</div>
<% end %>
